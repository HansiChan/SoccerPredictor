CREATE TABLE IF NOT EXISTS tmp.team_list (
    `team_id` STRING COMMENT 'Team ID',
    `name` STRING COMMENT 'Team Name',
    PRIMARY KEY (`team_id`)
) STORED AS KUDU;

CREATE TABLE IF NOT EXISTS tmp.game_record (
    `id` STRING COMMENT 'Game ID',
    `league` STRING COMMENT 'League',
    `game_date` STRING COMMENT 'Date',
    `game_time` STRING COMMENT 'Time',
    `host_team` STRING COMMENT 'Host Team',
    `full_score` STRING COMMENT 'Full Score',
    `guest_team` STRING COMMENT 'Guest Team',
    `half_score` STRING COMMENT 'Half Score',
    `asia_odds` STRING COMMENT 'Asia Odds',
    `total_overunder` STRING COMMENT 'Over/Under',
    `win_draw_lose` STRING COMMENT 'Win/Draw/Lose',
    PRIMARY KEY (id)
) STORED AS KUDU;

CREATE TABLE IF NOT EXISTS tmp.game_record_url (
    `id` STRING COMMENT 'Game ID',
    `host_homepage` STRING COMMENT 'Host Team Homepage',
    `game_record_page` STRING COMMENT 'Game Record Page',
    `guest_homepage` STRING COMMENT 'Guest Team Homepage',
    `analysis_page` STRING COMMENT 'Game Analysis Page',
    `asia_odds_page` STRING COMMENT 'Asia Odds Page',
    `euro_odds_page` STRING COMMENT 'Euro Odds Page',
    `overunder_odds_page` STRING COMMENT 'Over/Under Odds Page',
    PRIMARY KEY (id)
) STORED AS KUDU;

CREATE TABLE IF NOT EXISTS tmp.game_odds (
    `id` STRING COMMENT 'Game ID',
    `odds_company` STRING COMMENT 'Odds Company',
    `final_win` STRING COMMENT 'Final Win Odds',
    `final_draw` STRING COMMENT 'Final Draw Odds',
    `final_lose` STRING COMMENT 'Final Lose Odds',
    `initial_win` STRING COMMENT 'Initial Win Odds',
    `initial_draw` STRING COMMENT 'Initial Draw Odds',
    `initial_lose` STRING COMMENT 'Initial Lose Odds',
    PRIMARY KEY (id, odds_company)
) STORED AS KUDU;

CREATE TABLE IF NOT EXISTS tmp.game_overunder (
    `id` STRING COMMENT 'Game ID',
    `odds_company` STRING COMMENT 'Odds Company',
    `initial_over` STRING COMMENT 'Initial Over Odds',
    `initial_line` STRING COMMENT 'Initial Line',
    `initial_under` STRING COMMENT 'Initial Under Odds',
    `final_over` STRING COMMENT 'Final Over Odds',
    `final_line` STRING COMMENT 'Final Line',
    `final_under` STRING COMMENT 'Final Under Odds',
    PRIMARY KEY (id, odds_company)
) STORED AS KUDU;